{
    "compilerOptions": {
      "target": "ES2020",                      // Specify ECMAScript target version
      "module": "ESNext",                      // Specify module code generation
      "moduleResolution": "node",             // Use Node.js module resolution strategy
      "strict": true,                         // Enable all strict type-checking options
      "esModuleInterop": true,                // Enable interop between CommonJS and ES Modules
      "forceConsistentCasingInFileNames": true, // Ensure file names are case-consistent
      "skipLibCheck": true,                   // Skip type checking of declaration files
      "sourceMap": true,                      // Generate source maps for debugging
      "outDir": "./dist",                     // Redirect output files to the dist directory
      "baseUrl": "./",                        // Set the base URL for module resolution
      "paths": {                              // Define path aliases
        "@/*": ["js/*"]
      }
    },
    "include": ["js/**/*"],                   // Include all TypeScript files in the js folder
    "exclude": ["node_modules", "dist"]       // Exclude the node_modules and dist folders
  }
  